<main role="main" class="main-banner" id="blog-banner">
  <section class="jumbotron">
    <div class="container">
      <h1 class="display-4"><%= @post.title %></h1>
      <p class="lead text-muted pl-2"><em>Posted by <%= time_ago_in_words @post.created_at %></em></p>
    </div>
  </section>
</main>

<div class="container">
  <% if @post.image.present? %>
    <%= post_thumbnail_key(@post) %>
  <% end %>
  <%= simple_format @post.body %>
  <p><%= link_to "View latest blog posts", blog_path %></p>
</div>


