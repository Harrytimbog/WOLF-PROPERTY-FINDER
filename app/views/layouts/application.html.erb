<!DOCTYPE html>
<html>
  <head>
    <title>WOLFPropertyFinder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <link rel="apple-touch-icon" sizes="180x180" href="<%= asset_url "favicon/apple-touch-icon.png" %>">
    <link rel="icon" type="image/png" sizes="32x32" href="<%= asset_url "favicon/favicon-32x32.png"  %>">
    <link rel="icon" type="image/png" sizes="16x16" href="<%= asset_url "favicon/favicon-16x16.png" %>">
    <link rel="manifest" href="<% asset_url "favicon/site.webmanifest" %>">
  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %> <%= "show_sidebar" if @show_sidebar.present? %>" >
    <% if @show_sidebar.nil? %>
    <header>
      <%=  render "layouts/nav/public" %>
      <%= yield %>
    </header>
    <% else %>
      <%=  render "layouts/nav/dashboard" %>

      <div class="container-fluid">
        <div class="row">
          <%= render "layouts/nav/sidebar"  %>

          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4 mt-5">

          <%= yield %>
          </main>

        </div>
      </div>
    <% end %>
    <div id="notifications"><%= flash_notifications %></div>
    <p class="alert"><%= alert %></p>

    <%#= render "layouts/footer"  %>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js"></script>
    <script>feather.replace()</script>
  </body>
</html>
